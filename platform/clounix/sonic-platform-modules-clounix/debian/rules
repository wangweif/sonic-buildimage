#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

include /usr/share/dpkg/pkg-info.mk

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

export INSTALL_MOD_DIR:=extra

PYTHON         ?= python3

PACKAGE_PRE_NAME := sonic-platform-clounix
KVERSION   ?= $(shell uname -r)
KERNEL_SRC := /lib/modules/$(KVERSION)
export KERNEL_SRC
MOD_SRC_DIR:= $(shell pwd)
MODULE_DIRS:= clx8000-48c8d
MODULE_DIR := modules
UTILS_DIR := utils
SERVICE_DIR := service
SCRIPTS_DIR := scripts
BIOS_DIR := bios_bin
CONF_DIR := conf
PROCESS_DIR := clxProcess
IXGBE_VERSION := 5.9.4


MODULE_CFLAGS:=KBUILD_EXTRA_SYMBOLS=$(MOD_SRC_DIR)/sysfs/bsp_driver/Module.symvers
%:
	dh $@ --with systemd,python2,python3 --buildsystem=pybuild

clean:
	dh_testdir
	dh_testroot
	dh_clean

build:
	# For clx8000 driver, maurice
	cd $(MOD_SRC_DIR)/sysfs; \
	make clean; \
	make all DESTDIR=$(MOD_SRC_DIR)/debian/$(PACKAGE_PRE_NAME)-${MODULE_DIRS}; \
	make install DESTDIR=$(MOD_SRC_DIR)/debian/$(PACKAGE_PRE_NAME)-${MODULE_DIRS}; \
	(for mod in $(MODULE_DIRS); do \
		if [ $$mod = "clx8000-48c8d" ]; then \
			cd $(MOD_SRC_DIR)/$${mod}; \
			python2 setup.py build; \
			python2 setup.py bdist_wheel -d $(MOD_SRC_DIR)/$${mod}/utils; \
			python3 setup.py build; \
			python3 setup.py bdist_wheel -d $(MOD_SRC_DIR)/$${mod}/utils; \
			cd $(MOD_SRC_DIR);\
		fi; \
		if [ $$mod = "clx12800-32d" ]; then \
			make clean -C $(KERNEL_SRC)/build M=$(MOD_SRC_DIR)/$${mod}/modules; \
			make modules -C $(KERNEL_SRC)/build M=$(MOD_SRC_DIR)/$${mod}/modules EXTRA_CFLAGS+=${MODULE_CFLAGS}; \
			cd $(MOD_SRC_DIR)/$${mod}; \
			python2 setup.py build; \
			python2 setup.py bdist_wheel -d $(MOD_SRC_DIR)/$${mod}/utils; \
			python3 setup.py build; \
			python3 setup.py bdist_wheel -d $(MOD_SRC_DIR)/$${mod}/utils; \
		fi; \
	done)

	# Build afulnx_64 for SONiC
####(for mod in $(MODULE_DIRS); do \
####	cd $(MOD_SRC_DIR)/$${mod}/$(BIOS_DIR); \
####	./afulnx_64 /GENDRV KERNEL=$(KERNEL_SRC)/build .;\
####	./afulnx_64 /MAKEDRV KERNEL=$(KERNEL_SRC)/build .;\
####	make KERNEL=$(KERNEL_SRC)/build;\
####	cd $(MOD_SRC_DIR); \
####done)
	

binary: binary-arch binary-indep
	# Nothing to do

binary-arch: 
	# Nothing to do

#install: build
	#dh_testdir
	#dh_testroot
	#dh_clean -k 
	#dh_installdirs

binary-indep:
	dh_testdir
	dh_installdirs

	# Custom package commands
	(for mod in $(MODULE_DIRS); do \
		dh_installdirs -p$(PACKAGE_PRE_NAME)-$${mod} /$(KERNEL_SRC)/$(INSTALL_MOD_DIR); \
		dh_installdirs -p$(PACKAGE_PRE_NAME)-$${mod} /usr/local/bin; \
		dh_installdirs -p$(PACKAGE_PRE_NAME)-$${mod} /usr/local/bin/${PROCESS_DIR}; \
		dh_installdirs -p$(PACKAGE_PRE_NAME)-$${mod} /usr/bin; \
		dh_installdirs -p$(PACKAGE_PRE_NAME)-$${mod} /lib/systemd/system; \
		cp $(MOD_SRC_DIR)/$${mod}/$(UTILS_DIR)/* debian/$(PACKAGE_PRE_NAME)-$${mod}/usr/local/bin/; \
		cp $(MOD_SRC_DIR)/$${mod}/$(SERVICE_DIR)/*.service debian/$(PACKAGE_PRE_NAME)-$${mod}/lib/systemd/system/; \
		cp $(MOD_SRC_DIR)/$${mod}/$(SCRIPTS_DIR)/* debian/$(PACKAGE_PRE_NAME)-$${mod}/usr/bin/; \
		cp $(MOD_SRC_DIR)/$${mod}/${PROCESS_DIR}/* debian/$(PACKAGE_PRE_NAME)-$${mod}/usr/local/bin/${PROCESS_DIR}; \
		if [ $$mod = "clx8000-48c8d" ]; then \
			dh_installdirs -p$(PACKAGE_PRE_NAME)-$${mod} /usr/share/sonic/device/x86_64-clounix_clx8000_48c8d-r0; \
			cp $(MOD_SRC_DIR)/$${mod}/$(UTILS_DIR)/*.whl debian/$(PACKAGE_PRE_NAME)-$${mod}/usr/share/sonic/device/x86_64-clounix_clx8000_48c8d-r0; \
			if [ $$CONFIGURED_ARCH = "amd64" ]; then \
			# Add bios upgrade tool to device(usr/local/bin), maurice 20201125 \
			cp -r $(MOD_SRC_DIR)/$${mod}/bios_bin debian/$(PACKAGE_PRE_NAME)-$${mod}/usr/local/bin/; \
			fi; \
			cp $(MOD_SRC_DIR)/$${mod}/$(SERVICE_DIR)/platform_api_mgnt.sh debian/$(PACKAGE_PRE_NAME)-$${mod}/usr/local/bin/; \
		fi; \
		if [ $$mod = "clx12800-32d" ]; then \
			dh_installdirs -p$(PACKAGE_PRE_NAME)-$${mod} /usr/share/sonic/device/clounix_clx12800_32d-r0; \
			cp $(MOD_SRC_DIR)/$${mod}/$(UTILS_DIR)/*.whl debian/$(PACKAGE_PRE_NAME)-$${mod}/usr/share/sonic/device/clounix_clx12800_32d-r0; \
			if [ $$CONFIGURED_ARCH = "amd64" ]; then \
			# Add bios upgrade tool to device(usr/local/bin), maurice 20201125 \
			cp -r $(MOD_SRC_DIR)/$${mod}/bios_bin debian/$(PACKAGE_PRE_NAME)-$${mod}/usr/local/bin/; \
			fi; \
			cp $(MOD_SRC_DIR)/$${mod}/$(SERVICE_DIR)/platform_api_mgnt.sh debian/$(PACKAGE_PRE_NAME)-$${mod}/usr/local/bin/; \
		fi; \
	done)
	# Resuming debhelper scripts
	dh_testroot
	dh_install
	dh_installchangelogs
	dh_installdocs
	dh_systemd_enable
	dh_installinit
	dh_systemd_start
	dh_link
	dh_fixperms
	dh_compress
	dh_strip
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb
.PHONY: build binary binary-arch binary-indep clean
